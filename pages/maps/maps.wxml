<!--pages/maps/maps.wxml-->
<view style="background: rgba(255,255,255,1);position:fixed;width:100%;height:3rem">
<button bindtap="check" style="margin-bottom:3%">查询信息</button>
</view>
<view class="tr bg-w" style="position:fixed;margin-top:3rem">
    <view class="th big">编号</view>
    <view class="th">类型</view>
    <view class="th ">价格</view>
    <view class="th">时间</view>
    <view class="th">库中</view>
    <view class="th">可出库</view>
    <view class="th">经纬度</view>
</view>
<scorll-view class="table"scorll-y="true">
  <block wx:for="{{show}}" wx:key="{[code]}">
    <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
      <view class="td big">{{item.id}}</view>
      <view class="td">{{item.type}}</view>
      <view class="td">{{item.price}}</view>
      <view class="td">{{item.submission_date}}</view>
      <view class="td">{{item.status}}</view>
      <view class="td">{{item.agree_modify}}</view>
      <view class="td" bindtap="locate_maps" data-lnglat="{{item.lng_lat}}">{{item.lng_lat}}</view>
    </view>
    <view class="tr" wx:else>
      <view class="td big">{{item.code}}</view>
      <view class="td">{{item.type}}</view>
      <view class="td">{{item.price}}</view>
      <view class="td">{{item.submission_date}}</view>
      <view class="td">{{item.status}}</view>
      <view class="td">{{item.agree_modify}}</view>
      <view class="td" bindtap="locate_maps" data-lnglat="{{item.lng_lat}}">{{item.lng_lat}}</view>
    </view>
  </block>
</scorll-view>

