/* pages/send/send.wxss */

.table {
  border: 0px solid darkgray;
  top: 5rem;
  position: absolute;
  width: 100%;
  z-index: -1;
  margin-bottom: 2.3rem;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}

.td {
  width: 80%;
  justify-content: center;
  text-align: center;
  border-right: solid white 1px;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #e6f3f9;
}

.th {
  width: 10%;
  justify-content: center;
  background: rgba(50, 144, 207, 0.7);
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: top;
  font-weight: 500;
  border-right: solid white 1px;
}

.big {
  width: 40%;
}

.button {
  background: rgb(50, 144, 207);
  color: #fff;
  top: 0.25rem;
  height: 1.5rem;
  font-size: 10px;
  text-align: center;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.modalDlg {
  width: 550rpx;
  height: 300rpx;
  position: fixed;
  top: 25%;
  z-index: 9999;
  margin: 0rpx 100rpx 185rpx 100rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.block {
  position: absolute;
  width: 450rpx;
  height: 460rpx;
  top: 60rpx;
}

.modalDlg label {
  width: 20%;
  color: #13227a;
  align-content: center;
}

.modalDlg input {
  width: 100%;
  border-bottom: solid #13227a;
  padding-top: 5rpx;
  align-content: center;
}

.modalDlg button {
  position: absolute;
  bottom: 2rpx;
  color: #13227a;
  width: 100%;
}

.img_cancel {
  width: 130rpx;
  height: 130rpx;
  background: white;
  border-radius: 50%;
  border: 1px solid #13227a;
  margin: 0rpx auto;
  position: absolute;
  top: -65rpx;
  margin-bottom: 30rpx;
}

.img_cancel image {
  width: 100rpx;
  height: 100rpx;
  padding-top: 15rpx;
  padding-left: 15rpx;
  margin: 0rpx auto;
}

.shutalert {
  width: 110rpx;
  margin: 0rpx auto;
}

.shutalert image {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  bottom: -120rpx;
}

.showAll {
  background: rgb(31, 91, 131);
  color: #fff;
  bottom: 0.3rem;
  height: 1.7rem;
  font-size: 0.7rem;
}

.scanBtn {
  margin-bottom: 0.5rem;
  color: #fff;
  background: rgb(31, 91, 131);
  font-size: 0.9rem;
}

.inputButton {
  color: #fff;
  background: rgb(125, 184, 223);
  font-size: 0.5rem;
  height: 1.7rem;
  justify-content: center;
  justify-items: center;
}

.small {
  font-size: 0.5rem;
}

.clearButton {
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
}

.clearButton image {
  width: 24px;
  height: 24px;
}

.radio {
  margin-top: 0.5rem;
  margin-left: 2rem;
}
